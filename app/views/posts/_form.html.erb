<%= simple_form_for(@post, remote: true) do |f| %>
  <%= f.error_notification %>
<div  id="new-post">
  <div class="form-inputs">
    <hr>

      <%= f.input :statement, required: true, autofocus: true, as: :text, input_html: {  "row" => "4", id: "statement_textarea", maxlength: 160} %>

   
      <%= f.input :first_option, required: true, input_html: { maxlength: 20, class: "option_field" } %>
    
      <%= f.input :second_option, required: true, input_html: { maxlength: 20, class: "option_field" } %>
    
      <%= f.input :third_option, required: true, input_html: { maxlength: 20, class: "option_field" } %>
   
      <%= f.hidden_field :user_id %>
    
    <div class="form-actions">
      <%= f.button :submit, class: "submit-btn"  %>
    </div>

  </div> 
</div>
<% end %>
