<%= simple_form_for(@post, remote: true) do |f| %>
  <%= f.error_notification %>
<div  id="new-post">
  <div class="form-inputs">
    
      <%= f.input :statement, required: true, autofocus: true %>
   
   
      <%= f.input :first_option, required: true %>
    
      <%= f.input :second_option, required: true %>
    
      <%= f.input :third_option, required: true %>
   
      <%= f.input :user_id %>
    
    <div class="form-actions">
      <%= f.button :submit, class: "submit-btn"  %>
    </div>

  </div> 
</div>
<% end %>
