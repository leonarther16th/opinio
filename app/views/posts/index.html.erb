

 
    <% @posts.each do |post| %>
    <div class="row">
      <div class="col-lg-9 col-lg-offset-3">
      <div class="well">
      <div class="row">
      
     
         

    <div class="col-lg-12">
       
      <img src="https://fbcdn-profile-a.akamaihd.net/hprofile-ak-xaf1/t1.0-1/c0.0.50.50/p50x50/2423_130188370022_115_n.jpg" alt="">
       <strong> <%= current_user.name %></strong>
      <br><br>

        <p><strong><%= post.statement %></strong></p>

        <div class="btn-group btn-group-lg">
        <button type="button" class="btn btn-primary"><%= post.first_option %></button>
        <button type="button" class="btn btn-primary"><%= post.second_option %></button>
        <button type="button" class="btn btn-primary"><%= post.third_option %></button>
      </div>
        
        
        <div class="post-action">
        
        <%= link_to 'Show', post  , class: "action-btn" %>
        <%= link_to 'Edit', edit_post_path(post)  , class: "action-btn"%>
        <%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } , class: "action-btn" %>
        </div>
        </div>
      </div>
      </div>
      </div>
      </div>
    <% end %>


